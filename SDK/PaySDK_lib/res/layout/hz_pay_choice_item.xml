<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/hz_pay_middle_select"
             android:descendantFocusability="blocksDescendants">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="@dimen/hz_pay_dimen_100"
		android:gravity="center_vertical"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/hz_pay_icon_iv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/hz_pay_dimen_21"
			android:scaleType="fitCenter"
			android:src="@drawable/hz_pay_icon_1"/>

		<TextView
			android:id="@+id/hz_pay_name_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/hz_pay_dimen_24"
			android:singleLine="true"
			android:text="话费支付"
			android:textColor="@color/hz_pay_4d5873"
			android:textSize="@dimen/hz_pay_dimen_26"
			/>

		<TextView
			android:id="@+id/hz_pay_sale_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/hz_pay_dimen_18"
			android:layout_marginRight="@dimen/hz_pay_dimen_18"
			android:layout_weight="1"
			android:singleLine="true"
			android:text="（充值优惠信息）"
			android:textColor="@color/hz_pay_77bd38"
			android:textSize="@dimen/hz_pay_dimen_26"/>

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="@dimen/hz_pay_dimen_28"
			android:background="@drawable/hz_pay_view_arrow"/>
	</LinearLayout>
</FrameLayout>